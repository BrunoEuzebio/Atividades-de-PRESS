#include <iostream>
#include <cstdlib>

using namespace std;

int main(int argc, char** argv) {

    float desconto,valor, valorfinal;
    string produto;
    cout << "Insira o nome do produto:";
    cin >> produto;
    cout << "Insira o valor do produto:";
    cin >> valor;
    
    desconto = valor * 0.13;
    valorfinal = valor - desconto;
    
    cout << "O nome do produto é: " << produto << endl;
    cout << "O valor original do produto é :" << valor << endl;
    cout << "O desconto foi de: " << desconto << endl;
    cout << "O valor final do produto foi de :" << valorfinal << endl;
    return 0;
}


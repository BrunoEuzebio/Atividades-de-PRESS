#include<iostream>
#include <cstdlib>

using namespace std;

int main(int argc, char** argv) {

    
    int i , num,qnt = 0;
    
    for (i = 0; i < 15; i++){
        cout << "Informe um numero:";
        cin >> num;
        
        if(num < 0)
        {
            qnt = qnt + 1;
        }
    }
        
    cout << " A quantidade de numeros digitados negativos , Ã© de :"<< qnt << endl;
    return 0;
}

